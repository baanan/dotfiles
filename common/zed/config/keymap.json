// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
//
// To show currently running keybindings: run
// `zed: open key context view`
[
  {
    "context": "Dock",
    "bindings": {
      // managing docks
      "ctrl-shift-q": "workspace::CloseActiveDock",
    },
  },
  {
    "context": "Pane",
    "bindings": {
      // managing docks
      "ctrl-shift-q": "pane::CloseAllItems",
    },
  },
  {
    "context": "VimControl || !vim_mode && !CommandPalette && !BufferSearchBar",
    "bindings": {
      // switching between panes
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      // changing size of panes
      "alt-h": "vim::ResizePaneLeft",
      "alt-j": "vim::ResizePaneDown",
      "alt-k": "vim::ResizePaneUp",
      "alt-l": "vim::ResizePaneRight",
      // splitting
      "ctrl-s": "workspace::NewFileSplitHorizontal",
      "ctrl-v": "workspace::NewFileSplitVertical",
    },
  },
  {
    "context": "VimControl || !vim_mode && !CommandPalette && !BufferSearchBar && !Terminal && !renaming",
    "bindings": {
      // telescope
      "space space": "file_finder::Toggle",
      // tab management
      "space b o": "pane::CloseOtherItems",
      "space b d": "pane::CloseActiveItem",
      // switching between tabs ("buffers")
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem",
      // opening side panels
      "space e": "project_panel::ToggleFocus",
      "space a": "outline_panel::ToggleFocus",
      "space t": "terminal_panel::Toggle",
      "space b c": [
        "action::Sequence",
        ["pane::SplitRight", ["task::Spawn", { "task_name": "bacon", "reveal_target": "center" }]],
      ],
    },
  },
  // normal mode
  {
    "context": "VimControl && !VimCount",
    "bindings": {
      "0": "vim::FirstNonWhitespace",
      "^": "vim::StartOfLine",
    },
  },
  // project panel
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "d": "project_panel::Delete",
      "y": "project_panel::Copy",
      "x": "project_panel::Cut",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "q": "workspace::CloseActiveDock",
      "H": "project_panel::ToggleHideHidden",
    },
  },
  // subwords
  {
    "context": "VimControl && !menu && vim_mode != operator",
    "bindings": {
      "space w": "vim::NextSubwordStart",
      // "space b": "vim::PreviousSubwordStart",
      // "space e": "vim::NextSubwordEnd",
      "space g e": "vim::PreviousSubwordEnd",
    },
  },
  // sneak
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
    },
  },
  // typst
  {
    "context": "vim_mode == insert && extension == typ",
    "bindings": {
      "m k": ["workspace::SendKeystrokes", "$"],
    },
  },
]
